<head>
    <title>Register</title>
</head>
<div class=" mt-3 is-size-1 hero">
    <h1 class="title mx-auto">Register</h1>
</div>
<div class="container mt-2"><%- include("../partials/messages.ejs")  %> </div>

<form action="/auth/register" method="POST" class="container mt-3">
    <div class="field">
        <label class="label">Username</label>
        <div class="control">
          <input class="input is-success" type="text" name="username" value="<%= typeof username != 'undefined' ? username : '' %>" placeholder="e.g Alex Smith" required>
        </div>
      </div>
    
      <div class="field">
        <label class="label">Email</label>
        <div class="control">
          <input class="input is-success" type="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" placeholder="e.g. alexsmith@gmail.com" required>
        </div>
      </div>
      <div class="field">
        <label class="label">Password</label>
        <div class="control">
          <input class="input is-success" type="password" name="password" value="<%= typeof password != 'undefined' ? password : '' %>" minlength="8" placeholder="******" required>
        </div>
      </div>
      <div class="field">
        <label class="label">Confirm Password</label>
        <div class="control">
          <input class="input is-success" type="password" name="confirmPassword" value="<%= typeof confirmPassword != 'undefined' ? confirmPassword : ''  %>" placeholder="******" required>
        </div>
      </div>
      <button class="button is-link is-success" type="submit">Register</button>
      <div class="has-text-right"><a href="/auth/login" >Already have account ?</a></div>
</form>

